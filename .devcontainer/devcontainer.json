{
  "name": "Snake Arena Live",
  
  // Configure port forwarding - these will be set to public automatically
  "forwardPorts": [3000, 8000, 5432],
  "portsAttributes": {
    "3000": {
      "label": "Frontend",
      "onAutoForward": "openBrowser",
      "visibility": "public"
    },
    "8000": {
      "label": "Backend API",
      "onAutoForward": "notify",
      "visibility": "public"
    },
    "5432": {
      "label": "PostgreSQL",
      "onAutoForward": "ignore",
      "visibility": "private"
    }
  },
  
  // Post-create command to ensure Docker Compose setup
  "postCreateCommand": "chmod +x scripts/*.sh && bash scripts/set-ports-public.sh",
  
  "postStartCommand": "bash scripts/set-ports-public.sh",
  
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  }
}
